import { useEffect } from "react";
import { useNavigate } from "react-router-dom";
import { supabase } from "@/lib/supabaseClient";
import { Loader2 } from "lucide-react";
import { useToast } from "@/hooks/use-toast";

const StartCheckout = () => {
  const navigate = useNavigate();
  const { toast } = useToast();

  useEffect(() => {
    const beginCheckout = async () => {
      const {
        data: { session },
      } = await supabase.auth.getSession();

      // If somehow no session, send them back to login again
      if (!session) {
        toast({
          title: "Please sign in again",
          description: "We couldn't verify your session.",
          variant: "destructive",
        });
        navigate("/auth?redirect=checkout", { replace: true });
        return;
      }

      try {
        const res = await fetch(
          `${import.meta.env.VITE_SUPABASE_URL}/functions/v1/create-checkout-session`,
          {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
              Authorization: `Bearer ${session.access_token}`,
            },
            body: JSON.stringify({
              priceId: import.meta.env.VITE_STRIPE_PRICE_ID,
            }),
          }
        );

        const data = await res.json();

        if (!data.url) {
          throw new Error("Missing Stripe URL");
        }

        window.location.href = data.url;
      } catch (err: any) {
        toast({
          title: "Checkout failed",
          description: err.message,
          variant: "destructive",
        });

        navigate("/neeko-plus", { replace: true });
      }
    };

    beginCheckout();
  }, [navigate, toast]);

  return (
    <div className="min-h-screen flex items-center justify-center flex-col gap-4 p-6">
      <Loader2 className="h-10 w-10 animate-spin text-primary" />
      <p className="text-muted-foreground text-lg">
        Redirecting you to secure checkoutâ€¦
      </p>
    </div>
  );
};

export default StartCheckout;
